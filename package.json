{
  "name": "simple-event-broker",
  "version": "2.0.0",
  "description": "A production-ready event broker with WAL persistence, worker pools, retry logic, and DLQ support",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node --transpile-only src/server.ts",
    "watch": "tsc --watch",
    "clean": "rm -rf dist data",
    "prestart": "npm run build",
    "docker:build": "docker build -t event-broker .",
    "docker:run": "docker run -p 3000:3000 --name event-broker event-broker",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart"
  },
  "keywords": [
    "event-broker",
    "message-queue",
    "event-streaming",
    "queue",
    "broker",
    "event-driven"
  ],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "body-parser": "^2.2.0",
    "express": "^5.1.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.6",
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
